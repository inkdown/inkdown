{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "inkdown",
    "version": "0.1.0",
    "identifier": "com.furqas.inkdown",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "macOSPrivateApi": true,
        "windows": [
            {
                "title": "inkdown",
                "width": 800,
                "height": 600,
                "decorations": true,
                "transparent": true,
                "shadow": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "trafficLightPosition": {
                    "x": 13,
                    "y": 13
                }
            }
        ],
        "security": {
            "csp": null
        }
    },

    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
